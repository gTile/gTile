{
  "name": "gnome-shell-extension-gtile",
  "type": "module",
  "version": "1.0.0",
  "description": "gTile Gnome extension",
  "module": "dist/extension.js",
  "author": "Markus Schanz <markus@schanz.id>",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@girs/adw-1": "^1.8.0-4.0.0-beta.37",
    "@girs/clutter-17": "^17.0.0-4.0.0-beta.37",
    "@girs/gdk-4.0": "^4.0.0-4.0.0-beta.37",
    "@girs/gio-2.0": "^2.86.0-4.0.0-beta.37",
    "@girs/glib-2.0": "^2.86.0-4.0.0-beta.37",
    "@girs/gnome-shell": "^49.0.1",
    "@girs/gobject-2.0": "^2.86.0-4.0.0-beta.37",
    "@girs/gtk-4.0": "^4.20.1-4.0.0-beta.37",
    "@girs/meta-17": "^17.0.0-4.0.0-beta.37",
    "@girs/mtk-17": "^17.0.0-4.0.0-beta.37",
    "@girs/pango-1.0": "^1.57.0-4.0.0-beta.37",
    "@girs/shell-17": "^17.0.0-4.0.0-beta.37",
    "@girs/st-17": "^17.0.0-4.0.0-beta.37",
    "ava": "^6.4.1",
    "typescript": "^5.9.2"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "out/src/",
        "test/": "out/test/"
      },
      "compile": false
    }
  },
  "scripts": {
    "clean": "git clean -qxf ':/dist' ':/out' gtile.dist.tgz",
    "prebuild": "$npm_execpath run clean",
    "build": "tsc -p tsconfig.prod.json",
    "postbuild": "rm -rf dist/types",
    "prebuild:dist": "$npm_execpath run build",
    "build:dist": "tar -czf gtile.dist.tgz -C dist .",
    "install:extension": "gnome-extensions install -f gtile.dist.tgz",
    "pretest": "tsc",
    "test": "ava",
    "check": "tsc --noEmit"
  }
}
